<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

	<display-name>Archetype Created Web Application</display-name>


	<filter>
		<filter-name>ShiroFilter</filter-name>
		<filter-class>org.apache.shiro.web.servlet.IniShiroFilter</filter-class>
	</filter>

	<filter>
		<filter-name>SecurityCheck</filter-name>
		<display-name>SecurityCheck</display-name>
		<description></description>
		<filter-class>security.SecurityCheck</filter-class>
	</filter>

	<filter-mapping>
		<filter-name>ShiroFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>SecurityCheck</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<listener>
		<listener-class>org.apache.shiro.web.env.EnvironmentLoaderListener</listener-class>
	</listener>

	<servlet>
		<servlet-name>Login</servlet-name>
		<display-name>Login</display-name>
		<description></description>
		<servlet-class>login.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Register</servlet-name>
		<display-name>Register</display-name>
		<description></description>
		<servlet-class>register.Register</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Index</servlet-name>
		<display-name>Index</display-name>
		<description></description>
		<servlet-class>index.Index</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>logout</servlet-name>
		<display-name>logout</display-name>
		<description></description>
		<servlet-class>login.logout</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SecurityCheck</servlet-name>
		<display-name>SecurityCheck</display-name>
		<description></description>
		<servlet-class>login.SecurityCheck</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>PasswordRecovery</servlet-name>
		<display-name>PasswordRecovery</display-name>
		<description></description>
		<servlet-class>recovery.PasswordRecovery</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Group</servlet-name>
		<display-name>Group</display-name>
		<description></description>
		<servlet-class>group.Group</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Settings</servlet-name>
		<display-name>Settings</display-name>
		<description></description>
		<servlet-class>settings.Settings</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Comment</servlet-name>
		<display-name>Comment</display-name>
		<description></description>
		<servlet-class>group.Comment</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Participants</servlet-name>
		<display-name>Participants</display-name>
		<description></description>
		<servlet-class>group.Participants</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Report</servlet-name>
		<display-name>Report</display-name>
		<description></description>
		<servlet-class>report.Report</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Test</servlet-name>
		<display-name>Test</display-name>
		<description></description>
		<servlet-class>test.Test</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Chat</servlet-name>
		<display-name>Chat</display-name>
		<description></description>
		<servlet-class>group.Chat</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Register</servlet-name>
		<url-pattern>/Register</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Index</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SecurityCheck</servlet-name>
		<url-pattern>/SecurityCheck</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>PasswordRecovery</servlet-name>
		<url-pattern>/PasswordRecovery</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Group</servlet-name>
		<url-pattern>/group</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Settings</servlet-name>
		<url-pattern>/settings</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Comment</servlet-name>
		<url-pattern>/comment</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Participants</servlet-name>
		<url-pattern>/participants</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Report</servlet-name>
		<url-pattern>/Report</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Test</servlet-name>
		<url-pattern>/Test</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Chat</servlet-name>
		<url-pattern>/chat</url-pattern>
	</servlet-mapping>


	<welcome-file-list>
		<welcome-file>/login.jsp</welcome-file>
	</welcome-file-list>

	<resource-ref>
		<description>DB Connection Pool</description>
		<res-ref-name>jdbc/jdbc</res-ref-name>
		<res-type>javax.sql.DataSource</res-type>
		<res-auth>Container</res-auth>
		<res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>
</web-app>
